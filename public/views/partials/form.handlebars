<div class="container-fluid">
<form id="create_products">
    <div class="col-sm-3">
        <label for="title" class="form-label">Title:</label>
        <input type="text" class="form-control" id="title" aria-describedby="title">
    </div>

    <div class="col-sm-3">
        <label for="price" class="form-label">Price:</label>
        <input type="number" class="form-control" id="price" aria-describedby="price">
    </div>

    <div class="col-sm-3">
        <label for="thumbnail" class="form-label">Thumbnail:</label>
        <input type="url" class="form-control" id="thumbnail" aria-describedby="thumbnail">
    </div>
<br>
    <div>
        <button type="submit" class="btn btn-primary" id="create_product">Create</button>
    </div>
        
</form>
</div>
